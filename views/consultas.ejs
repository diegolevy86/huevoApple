<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css">
    <title>Buscar BD fecha</title>
</head>
<body>
    <!--    Titulo    -->
    <section class="titulo">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Huevo Apple</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="menu collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <form class="nav-link" aria-current="page" action="/" method="get"><button type="submit"
                                    class="btn btn-primary">Inicio</button></form>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Consultar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Cargar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Estadisticas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </section>

    <section>
        <div class="container-fluid row">
            <div class="busq col-md-4">
                <form class="input-group mb-3" action="/buscarBDimei" method="post">
                    <span class="input-group-text" id="inputGroup-sizing-default">Buscar por IMEI</span>
                    <input type="text" class="form-control" aria-label="Sizing example input" name="imei"
                        aria-describedby="inputGroup-sizing-default" placeholder="6 últimos digitos">
                    <button type="submit" class="btn btn-primary">→</button>
                </form>
            </div>
            <div class="busq col-md-4">
                <form class="input-group mb-3" action="/buscarBDfecha" method="post">
                    <span class="input-group-text" id="inputGroup-sizing-default">Buscar por Fecha</span>
                    <input type="date" class="form-control" aria-label="Sizing example input" name="fech"
                        aria-describedby="inputGroup-sizing-default">
                    <button type="submit" class="btn btn-primary">→</button>
                </form>
            </div>
            <div class="busq col-md-4">
                <form class="input-group mb-3" action="/buscarBDnombre" method="post">
                <span class="input-group-text" id="inputGroup-sizing-default">Buscar por cliente</span>
                <input type="text" class="form-control" aria-label="Sizing example input" name="nYa"
                    aria-describedby="inputGroup-sizing-default" placeholder="Juan Lopez">
                <button type="submit" class="btn btn-primary">→</button>
                </form>
            </div>
            <div class="container-fluid row">
            <div class="busq col-md-8">
                <form class="input-group mb-3" action="/buscarBDentreFechas" method="post">
                    <span class="input-group-text" id="inputGroup-sizing-default">Buscar entre Fechas</span>
                    <input type="date" class="form-control" aria-label="Sizing example input" name="fech1"
                        aria-describedby="inputGroup-sizing-default">
                        <input type="date" class="form-control" aria-label="Sizing example input" name="fech2"
                        aria-describedby="inputGroup-sizing-default">
                    <button type="submit" class="btn btn-primary">→</button>
                </form>
            </div>
        </div>
        
        </div>
    </section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous">
</script>
</body>

</html>